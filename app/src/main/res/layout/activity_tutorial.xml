<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectbackground"
    tools:context="com.example.dongdong.memorymaster.Tutorial">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/i1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView6"
            android:layout_marginBottom="51dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="100dp"
            android:layout_toStartOf="@+id/imageView4"
            app:srcCompat="@drawable/i1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/i2"
            android:layout_alignTop="@+id/imageView6"
            android:layout_alignStart="@+id/imageView7" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/i2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/i3"
            android:layout_alignTop="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            app:srcCompat="@drawable/i3"

            />

        <TextView
            android:id="@+id/Learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@color/ColorOrange"
            android:text="How To Play?"
            android:textSize="30dp"
            android:textColor="@android:color/background_light"
            />

        <TextView
            android:id="@+id/Learn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/background_light"
            android:text="Step 1: Remeber all shapes in 3 Seconds"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="11dp"
            android:text="Step 2 :Type the same shape you remember In 3 Seconds in the following page"
            android:background="@android:color/background_light"
            android:textSize="20dp"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
